{
		"name": "soliditypp",
		"displayName": "Soliditypp",
		"description": "soliditypp for vscode",
		"version": "0.0.1",
		"engines": {
				"vscode": "^1.30.0"
		},
		"categories": [
			"Debuggers"
		],
		"activationEvents": [
				"onLanguage:soliditypp",
				"onDebug"
		],
		"main": "./out/extension.js",
		"contributes": {
			"languages": [
				{
					"id": "soliditypp",
					"extensions": [
							".solpp"
					],
					"aliases": [
							"Soliditypp",
							"soliditypp"
					]
				}
			],
			"debuggers": [
				{
					"type": "soliditypp",
					"label": "Soliditypp",
					"program": "./out/debugAdapter.js",
					"runtime": "node",
					"configurationAttributes": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Path to a soliditypp file.",
								"default": "index.solpp"
							}
						}
					},
					"initialConfigurations": [
						{
							"type": "soliditypp",
							"request": "launch",
							"name": "Soliditypp Debug",
							"debugServer": 4711,
							"program": "index.solpp"
						}
					],
					"configurationSnippets": [
						{
							"label": "Soliditypp Debug: Launch",
							"description": "A new configuration for 'debugging' a user selected soliditypp project.",
							"body": {
								"type": "soliditypp",
								"request": "launch",
								"name": "Soliditypp Debug",
								"debugServer": 4711,
								"program": "index.solpp"
							}
						}
					]
				}
			]
		},
		"scripts": {
				"vscode:prepublish": "npm run compile",
				"compile": "tsc -p ./",
				"watch": "tsc -watch -p ./",
				"postinstall": "node ./node_modules/vscode/bin/install",
				"test": "npm run compile && node ./node_modules/vscode/bin/test"
		},
		"devDependencies": {
				"typescript": "^3.1.4",
				"vscode": "^1.1.25",
				"tslint": "^5.8.0",
				"@types/node": "^8.10.25",
				"@types/mocha": "^2.2.42"
		},
		"dependencies": {
				"vscode-debugadapter": "^1.33.0"
		}
}
